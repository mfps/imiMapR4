<%= form_for(@user) do |f| %>
   <% if @user.errors.any? %>
      <div id="error_explanation">
         <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
         <ul>
            <% @user.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
            <% end %>
         </ul>
      </div>
   <% end %>
   <section class="changeEmail">
      <div class="row">
         <div class="span4">
            <div class="field" id="field-titles">
               <%= f.label t "users.attributes.email" %><br />
               <%= f.text_field :email, class: "textlabel" %>
            </div>
         </div>               
         <div class="span4">
            <div class="field" id="field-titles">
               <%= f.label t "users.attributes.publicmail", style:"width:100px;display:inline-block;background-color:red" %>
               <div class="edit-recommend1" style="margin-left:10px; cursor: pointer;">
                  <% if @user.publicmail %>
                     <i id="recommend up" class="recommend-publicmail icon-3x fa fa-check"></i>
                  <% else %>
                     <i id="recommend down" class="recommend-publicmail icon-3x fa fa-times"></i>
                  <% end %>
               </div>
               <%= f.hidden_field :publicmail, value: @user.publicmail ? 1 : 0 %>
            </div>    
         </div>     
      </div>
   </section>
   <section class="changePassword">
      <div class="row">
         <div class="span4">
            <div class="field" id="field-titles">
               <%= f.label t "users.attributes.password" %><br />
               <%= f.password_field :password %>
            </div>
         </div>
         <div class="span4">
            <div class="field" id="field-titles">
               <%= f.label t "users.attributes.mailnotif"  %>
               <div class="edit-recommend1" style="margin-left:10px; cursor: pointer;">
                  <% if @user.mailnotif %>
                     <i id="recommend up" class="recommend-mailnotif icon-3x fa fa-check"></i>
                  <% else %>
                     <i id="recommend down" class="recommend-mailnotif icon-3x fa fa-times"></i>
                  <% end %>
               </div>
               <%= f.hidden_field :mailnotif, value: @user.mailnotif ? 1 : 0 %>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="span4">
            <div class="field" id="field-titles">
               <%= f.label t "users.attributes.password_confirmation" %><br />
               <%= f.password_field :password_confirmation %>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="simform__actions span1 offset7"> 
            <div class="actions" style="float: left">
               <%= f.submit t(params[:action] == 'new' ? 'users.create' : 'users.update'), class: "submit btn btn-success" %>
            </div>
         </div>
      </div>
   </section>
   <br><br><br><br>
   <br><br><br><br>
<% end %>
