<fieldset>
    <%= f.label :description do %><br />
        <%= f.text_field :description %>
    <% end %>
    <%= f.label :file do %><br />
        <% if !f.object.file.to_s.empty? %>
            <%= image_tag f.object.file %>
        <% else %>
            <%= f.file_field :file %>
        <% end %>
    <% end %>
    <br/>
    <%= f.hidden_field :_destroy %>
  <%= link_to " remove", '#', class: "remove_fields btn btn-danger icon-white icon-remove" %>
</fieldset>
<br/>